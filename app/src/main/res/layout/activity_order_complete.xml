<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkout.orderComplete.OrderCompleteActivity">

    <TextView
        android:id="@+id/backTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/ic_round_close_24"
        android:gravity="center_horizontal"
        android:text="Order Successfull"

        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_undraw_order_confirmed_gif" />

    <TextView
        android:id="@+id/confirmTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:gravity="center_horizontal"

        android:text="Order Conform"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmTV"
        android:gravity="center_horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_margin="10dp"
        android:text="Your order will be dispatch within 1-2 working days"
        android:textColor="@color/priceGray"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/shopMoreTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descTV"
        android:layout_margin="10dp"
        android:background="@drawable/rectange_box"
        android:backgroundTint="#A0C8EB"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Shop More"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />



</RelativeLayout>